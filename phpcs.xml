<?xml version="1.0"?>
<ruleset name="Laravel Project Standards">
    <description>PSR-12 and Laravel coding standards</description>

    <file>app</file>
    <file>routes</file>
    <file>database</file>
    <file>tests</file>

    <rule ref="PSR12"/>

    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>
    <exclude-pattern>bootstrap/*</exclude-pattern>
</ruleset>

